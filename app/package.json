{
  "name": "codus",
  "version": "0.0.0",
  "description": "Efficient code practice for individuals and classrooms.",
  "scripts": {
    "start": "webpack-dev-server --inline",
    "build": "webpack",
    "watch": "webpack --watch",
    "lint-sass": "sass-lint 'src/**/*.sass' -v",
    "lint-js": "eslint . --ext js,vue",
    "test": "npm run -s lint-sass && npm run -s lint-js",
    "count": "cloc . --vcs=git --not-match-f=package-lock.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/controversial/codus.git"
  },
  "author": "Luke Deen Taylor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/controversial/codus/issues"
  },
  "homepage": "https://github.com/controversial/codus#readme",
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "autoprefixer": "^9.4.10",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "cloc": "^2.4.0",
    "copy-webpack-plugin": "^5.0.0",
    "css-loader": "^2.1.0",
    "dotenv": "^6.2.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-webpack": "^0.11.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-vue": "^5.2.2",
    "extract-loader": "^3.1.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "vue-loader": "^15.7.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.8",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1"
  },
  "dependencies": {
    "abortcontroller-polyfill": "^1.2.5",
    "auth0-js": "^9.10.0",
    "babel-polyfill": "^6.26.0",
    "codemirror": "^5.44.0",
    "d3-ease": "^1.0.5",
    "d3-selection": "^1.4.0",
    "d3-shape": "^1.3.4",
    "d3-transition": "^1.2.0",
    "debounce": "^1.2.0",
    "dedent": "^0.7.0",
    "jwt-decode": "^2.2.0",
    "mousetrap": "^1.6.3",
    "promise-polyfill": "^8.1.0",
    "validator": "^10.11.0",
    "vue": "^2.6.8",
    "vue-codemirror": "^4.0.6",
    "vue-feather-icons": "^4.10.0",
    "vue-router": "^3.0.2",
    "vue-tippy": "^2.1.2",
    "vuex": "^3.1.0",
    "whatwg-fetch": "^3.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "> 0.25%, not dead"
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:vue/essential"
    ],
    "env": {
      "browser": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "no-underscore-dangle": "off",
      "global-require": "off",
      "object-curly-newline": [
        "error",
        {
          "consistent": true
        }
      ],
      "import/no-webpack-loader-syntax": "off",
      "import/newline-after-import": "off"
    },
    "settings": {
      "import/resolver": "webpack"
    },
    "plugins": [
      "vue"
    ]
  }
}
