{
  "name": "codus",
  "version": "0.0.0",
  "description": "Efficient code practice for individuals and classrooms.",
  "scripts": {
    "start": "webpack-dev-server --inline --open",
    "build": "webpack",
    "watch": "webpack --watch",
    "lint-sass": "sass-lint 'app/**/*.sass' -v",
    "lint-js": "eslint . --ext js,vue",
    "test": "npm run -s lint-sass && npm run -s lint-js",
    "docs": "jsdoc app/src -c jsdoc.config.json -r -d docs --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/controversial/codus.git"
  },
  "author": "Arkis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/controversial/codus/issues"
  },
  "homepage": "https://github.com/controversial/codus#readme",
  "devDependencies": {
    "auth0-js": "^8.2.0",
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-vue": "^2.0.1",
    "extract-loader": "^0.1.0",
    "file-loader": "^0.11.1",
    "html-loader": "^0.4.4",
    "jsdoc": "^3.4.3",
    "jsdoc-babel": "^0.3.0",
    "node-sass": "^4.5.2",
    "postcss-loader": "^1.3.3",
    "sass-lint": "^1.10.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.17.0",
    "url-loader": "^0.5.7",
    "vue-loader": "^12.0.3",
    "vue-style-loader": "^3.0.1",
    "vue-template-compiler": "^2.3.2",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "animate.css": "^3.5.2",
    "babel-polyfill": "^6.23.0",
    "jwt-decode": "^2.2.0",
    "vue": "^2.3.2",
    "vue-router": "^2.5.3",
    "vuex": "^2.2.1"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "es2016"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true
    },
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "import/no-webpack-loader-syntax": "off",
      "global-require": "off",
      "no-param-reassign": "off"
    },
    "settings": {
      "import/resolver": "webpack"
    },
    "plugins": [
      "vue"
    ]
  }
}
